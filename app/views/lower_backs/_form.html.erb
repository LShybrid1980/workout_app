<div class='well bs-component col-lg-8'>
  <%= form_for(@lower_back, url: workout_data_lower_backs_path(@workout_data, @lower_back)) do |f| %>
    <% if @lower_back.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@lower_back.errors.count, "error") %> prohibited this lower_backs workout data from being saved:</h2>

        <ul>
        <% @lower_back.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class='form-group'>
        <%= f.label "Name", class: 'col-lg-2' %>
        <div class='col-lg-10'>
          <%= f.select(:status_type, options_for_select([['Deficit Deadlift', 'Deficit Deadlift (Lower Back)'], ['Deadlift with Bands', 'Deadlift with Bands (Lower Back)'], ['Rack Pulls', 'Rack Pulls (Lower Back)'], ['Hyperextensions with No Hyperextension Bench', 'Hyperextensions with No Hyperextension Bench (Lower Back)'], ['Seated Back Extension', 'Seated Back Extension (Lower Back)']])) %><br><br>
        </div>  
      </div>

      <div class='form-group'>
        <%= f.label :weight, class: 'col-lg-2' %>
        <div class='col-lg-10'>
          <%= f.number_field :weight, class: 'form-control', autofocus: true %><br>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :set, class: 'col-lg-2' %>
        <div class='col-lg-10'>
          <%= f.number_field :set, class: 'form-control', autofocus: true %><br>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :rep, class: 'col-lg-2' %>
        <div class='col-lg-10'>
          <%= f.number_field :rep, class: 'form-control', autofocus: true %><br>
        </div>  
      </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>  
