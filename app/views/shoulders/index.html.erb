<div class='page-header'>
  <h1>Your Current Shoulder Workout</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weights</th>
      <th>Sets</th>
      <th>Reps</th>    
    </tr>
  </thead>

  <tbody>
    <% @shoulders.each do |shoulder| %>
      <tr>
        <td><%= link_to shoulder.name, shoulder %></td>
        <td><%= shoulder.names %></td>
        <td><%= link_to shoulder.weight, shoulder %></td>
        <td><%= shoulder.weights %></td>
        <td><%= link_to shoulder.set, shoulder %></td>
        <td><%= shoulder.sets %></td>
        <td><%= link_to shoulder.rep, shoulder %></td>
        <td><%= shoulder.reps %></td>
        <td><%= link_to 'Edit', edit_shoulder_path(shoulder) %> | 
            <%= link_to 'Destroy', shoulder, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shoulders Workout Data', new_shoulder_path, class: 'btn btn-primary' %>