<div class='page-header'>
  <h1>Your Current Elliptical Workout Data</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Speed</th>
      <th>Time</th>
      <th>Distance</th> 
      <th>Resistance</th>
      <th>Incline</th>
    </tr>
  </thead>

  <tbody>
    <% @ellipticals.each do |elliptical| %>
      <tr>
        <td><%= link_to elliptical.status_type, elliptical %></td>
        <td><%= link_to elliptical.speed, elliptical %></td>
        <td><%= link_to elliptical.time, elliptical %></td>
        <td><%= link_to elliptical.distance, elliptical %></td>
        <td><%= link_to elliptical.resistance, elliptical %></td>
        <td><%= link_to elliptical.incline, elliptical %></td>
        <td><%= link_to 'Edit', edit_workout_data_elliptical_path(elliptical) %> | 
            <%= link_to 'Destroy', elliptical, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ellipticals Workout Data', new_workout_data_elliptical_path, class: 'btn btn-primary' %>
              
        
        