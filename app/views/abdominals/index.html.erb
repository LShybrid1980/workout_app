<div class='page-header'>
  <h1>Your Current Abs Workout</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weights</th>
      <th>Sets</th>
      <th>Reps</th>    
    </tr>
  </thead>

  <tbody>
    <% @abdominals.each do |abdominal| %>
      <tr>
        <td><%= link_to abdominal.status_type, abdominal %></td>
        <td><%= link_to abdominal.weight, abdominal %></td>
        <td><%= link_to abdominal.set, abdominal %></td>
        <td><%= link_to abdominal.rep, abdominal %></td>
        <td><%= link_to 'Edit', edit_abdominal_path(abdominal) %> | 
            <%= link_to 'Destroy', abdominal, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Abdominals Workout Data', new_abdominal_path, class: 'btn btn-primary' %>