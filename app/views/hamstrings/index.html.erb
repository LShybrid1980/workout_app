<div class='page-header'>
  <h1>Your Current Hamstring Workout</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weights</th>
      <th>Sets</th>
      <th>Reps</th>    
    </tr>
  </thead>

  <tbody>
    <% @hamstrings.each do |hamstring| %>
      <tr>
        <td><%= link_to hamstring.status_type, hamstring %></td>
        <td><%= link_to hamstring.weight, hamstring %></td>
        <td><%= link_to hamstring.set, hamstring %></td>
        <td><%= link_to hamstring.rep, hamstring %></td>
        <td><%= link_to 'Edit', edit_workout_data_hamstring_path(hamstring) %> | 
            <%= link_to 'Destroy', hamstring, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hamstrings Workout Data', new_workout_data_hamstring_path, class: 'btn btn-primary' %>
        
        
        
        