<div class='page-header'>
  <h1>Your Current Calves Workout Data</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weights</th>
      <th>Sets</th>
      <th>Reps</th>    
    </tr>
  </thead>

  <tbody>
    <% @calves.each do |calf| %>
      <tr>
        <td><%= link_to calf.name, calf %></td>
        <td><%= calf.names %></td>
        <td><%= link_to calf.weight, calf %></td>
        <td><%= calf.weights %></td>
        <td><%= link_to calf.set, calf %></td>
        <td><%= calf.sets %></td>
        <td><%= link_to calf.rep, calf %></td>
        <td><%= calf.reps %></td>
        <td><%= link_to 'Edit', edit_calf_path(calf) %> | 
            <%= link_to 'Destroy', calf, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Calves Workout Data', new_calf_path, class: 'btn btn-primary' %>
