<div class='page-header'>
  <h1>Your Current Chest Workout</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weights</th>
      <th>Sets</th>
      <th>Reps</th>    
    </tr>
  </thead>

  <tbody>
    <% @chests.each do |chest| %>
      <tr>
        <td><%= link_to chest.status_type, chest %></td>
        <td><%= link_to chest.weight, chest %></td>
        <td><%= link_to chest.set, chest %></td>
        <td><%= link_to chest.rep, chest %></td>
        <td><%= link_to 'Edit', edit_chest_path(chest) %> | 
            <%= link_to 'Destroy', chest, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chests Workout Data', new_chest_path, class: 'btn btn-primary' %>
        
        
        
        
